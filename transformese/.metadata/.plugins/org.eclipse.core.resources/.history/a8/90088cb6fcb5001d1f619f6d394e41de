package Atividade;

import java.util.Scanner;

public class Pratict {
	
	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("       Atividade 2       ");
		
		System.out.println("Qual a sua nota de Matematica ?");
		double mat = scanner.nextDouble();
		
		System.out.println("Qual a sua nota de Portuquês ?");
		double port = scanner.nextDouble();
		
		System.out.println("Qual a sua nota de Historia ?");
		double hist = scanner.nextDouble();
		
		double mediaNota = (mat + port + hist)/3;
		
		if(mediaNota >= 6) {
			System.out.println("Aprovado, sua nota da media é " + mediaNota);
		} else if (mediaNota >= 5) {
			System.out.println("Recuperação, sua da media é " + mediaNota);
		} else {
			System.out.println("Reaprovado, sua nota da media foi " + mediaNota);
		}
		System.out.println('\n');
	}

}
